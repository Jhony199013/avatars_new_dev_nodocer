{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./front/*"]
    }
  },
  "include": [
    "front/**/*.ts",
    "front/**/*.tsx",
    "front/next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "app",
    "docker",
    ".next",
    "out",
    "build"
  ]
}

